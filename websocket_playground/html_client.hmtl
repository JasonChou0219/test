<!DOCTYPE html>
<html>
    <head>
        <title>WebSocket demo</title>
    </head>
    <body>
        <script>
            var ws = new WebSocket("ws://localhost:82/api/v1/sm_functions/ws/observable/3c6ae8e8-a95e-4519-b81c-38f045299510"),
                messages = document.createElement('ul');
            ws.onopen = function(event) {
                var messages = document.getElementsByTagName('ul')[0],
                    message = document.createElement('li'),
                    content = document.createTextNode('Connected to: ' + event.currentTarget.url);
                message.appendChild(content);
                messages.appendChild(message);
                ws.send('c3eb7a19-9f20-4283-a353-c4cac8c3eb91')
                };

            ws.onmessage = function (event) {
                var messages = document.getElementsByTagName('ul')[0],
                    message = document.createElement('li'),
                    content = document.createTextNode(event.data);
                message.appendChild(content);
                messages.appendChild(message);
            };
            document.body.appendChild(messages);
        </script>
    </body>
</html>
